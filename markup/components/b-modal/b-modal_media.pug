include ../b-media-modal/b-media-modal

mixin b-modal_media(data)
    // Modal
    #media.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
        .modal-dialog.modal-lg(role='document')
            .modal-content
                button.modal-close(type='button', data-dismiss='modal', aria-label='Close')
                    !=  pugHelpers.Icon.call(locals, {iconName: 'close'})
                +b-media-modal
